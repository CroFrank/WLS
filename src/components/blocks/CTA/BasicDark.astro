---
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import CTA from '../../ui/CTA.astro'
import Button from '../../ui/Button.astro'
import ChipNotification from '../../ui/ChipNotification.astro'
import { Image } from 'astro:assets'

// Content
import ctaImage from '../../../assets/cta-dark-bg.webp'
import badge from '../../../assets/badge.svg'
---

<Section>
	<Row>
		<Col span="1" />
		<Col span="10">
			<CTA
				title="Najbolji trenutak za biti poduzetan je upravo ovaj sad!"
				text="Popunite naš vrlo kratki upitnik gdje ćete nam objasniti kakvu stranicu želite imati, a mi ćemo Vam se javiti povratno i pobrinuti se za sve ostalo."
				mode="dark"
				bg={ctaImage}
			>
				<ChipNotification radius="rounded-full" classes="mb-6 box">
					<Image src={badge} alt="Product of the Year" class="h-12 w-12" slot="button" />
					Postanite najbolji u onome što radite...
				</ChipNotification>
				<Button size="lg" style="primary" link="kontakt-za-izradu-web-stranice"> Početak </Button>
			</CTA>
			<Col span="1" />
		</Col>
	</Row>
</Section>
