---
import Layout from '../layouts/Layout.astro'
import FormHero from '../components/blocks/hero/ContactHero.astro'
import ContactCards from '../components/blocks/contact/ContactCards.astro'
import Newsletter from '../components/blocks/contact/Newsletter.astro'

const SEO = {
	title: 'WLS | kontaktirajte nas za izradu web stranica',
	description:
		'Imate pitanje oko izrade web stranica? Brzo odgovaramo na upite i nakon kratkog upitnika šaljemo ponudu.'
}
const header = {
	title: 'Opišite nam kakvu <strong>web stranicu</strong> biste htjeli imati',
	text: 'Koja je tema stranice (sport, portfolio, prodaja ručnih radova, najam bicikla, udruga...). Koji je cilj stranice (privuči klijente, prodati proizvod, ponuditi uslugu, samopromocija...)'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<FormHero
		title={header.title}
		text={header.text}
		id="contact"
		classes="bg-neutral-50 dark:bg-neutral-950/80"
	/>
	<ContactCards classes="dark:bg-neutral-950/80" />
	<Newsletter />
</Layout>
