---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import FAQ from '../components/blocks/FAQ/FaqSticky.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

// Data
import faqData from '../data/json-files/faqData.json'
// - FAQ Categories
const faqPricing = faqData.filter((faq) => faq.category === 'pricing')
// - SEO
const SEO = {
	title: 'WLS | Česta pitanja oko izrade web stranice.',
	description:
		'Odgovori na najčešća pitanja oko izrade web stranice. Informirajte se u svega par klikova.'
}
// - Page Header
const header = {
	title: 'Odgovori na vaša <strong>WLS</strong> pitanja',
	text: 'Za sva dodatna pitanja javite nam se putem upitnika'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<FAQ
		title="Izrada web stranice može biti jednostavna"
		text="Pronađite odgovore na vaša pitanja među najčešćim pitanjima klijenata"
		data={faqPricing}
	/>

	<CTA />
</Layout>
